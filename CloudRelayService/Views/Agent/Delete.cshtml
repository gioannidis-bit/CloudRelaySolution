@model CloudRelayService.Models.AgentConfig
@{
    ViewData["Title"] = "Delete Agent Configuration";
}

<h2>Delete Agent Configuration</h2>

<div>
    <p>Are you sure you want to delete this configuration?</p>
    <div>
        <strong>ID:</strong> @Model.Id<br />
        <strong>Name:</strong> @Model.Name<br />
        <strong>Connection String:</strong> @Model.ConnectionString<br />
        <strong>Tables/Views:</strong> @Model.TablesOrViews<br />
        <strong>Created On:</strong> @Model.CreatedOn<br />
    </div>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Delete" class="btn btn-danger" /> |
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
