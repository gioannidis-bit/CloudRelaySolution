@model IEnumerable<CloudRelayService.Models.AgentConfig>

<h2>Agents</h2>
<table class="table">
    <thead>
        <tr>
            <th>Status</th>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var agent in Model)
        {
            var online = ((IDictionary<string, string>)ViewBag.OnlineAgents).Any(o => o.Value == agent.Name);
            <tr>
                <td>
                    @if (online)
                    {
                        <span style="color: green;">● Online</span>
                    }
                    else
                    {
                        <span style="color: red;">● Offline</span>
                    }
                </td>
                <td>@agent.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@agent.Id" class="btn btn-sm btn-primary">Edit Config</a>
                </td>
            </tr>
        }
    </tbody>
</table>
