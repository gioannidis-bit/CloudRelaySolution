@model IEnumerable<StoredQuery>
@{
    ViewData["Title"] = "Query Management";
}

<h2>Query Management</h2>
<p>
    <a asp-action="Create" class="btn btn-primary">Add New Query</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>ID</th>
            <th>Query Text</th>
            <th>Description</th>
            <th>Created On</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var query in Model)
        {
            <tr>
                <td>@query.Id</td>
                <td>@query.QueryText</td>
                <td>@query.Description</td>
                <td>@query.CreatedOn</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@query.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@query.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
