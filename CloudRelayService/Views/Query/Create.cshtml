@model StoredQuery
@{
    ViewData["Title"] = "Add New Query";
}

<h2>Add New Query</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="QueryText"></label>
        <input asp-for="QueryText" class="form-control" />
        <span asp-validation-for="QueryText" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <input type="submit" value="Submit Query" class="btn btn-primary" />
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

