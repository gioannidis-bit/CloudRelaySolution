@model CloudRelayService.Models.RunQueryViewModel
@{
    ViewData["Title"] = "Query Results";
}

<h2>Results for Query: @Model.Query.QueryText</h2>

@if (!string.IsNullOrEmpty(Model.ErrorMessage))
{
    <div class="alert alert-danger">
        Error executing query: @Model.ErrorMessage
    </div>
}
else if (Model.Results == null || !Model.Results.Any())
{
    <div class="alert alert-info">
        No results were returned.
    </div>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                @foreach (var key in Model.Results.First().Keys)
                {
                    <th>@key</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Results)
            {
                <tr>
                    @foreach (var val in row.Values)
                    {
                        <td>@val</td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
